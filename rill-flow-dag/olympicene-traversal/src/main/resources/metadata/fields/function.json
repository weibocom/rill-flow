{
  "name": {
    "type": "string",
    "title": "任务名称",
    "required": true,
    "default": ""
  },
  "title": {
    "type": "string",
    "title": "节点名称",
    "required": false,
    "default": ""
  },
  "description": {
    "type": "string",
    "title": "节点描述",
    "required": false,
    "default": ""
  },
  "resourceName": {
    "type": "string",
    "title": "资源名称",
    "required": true,
    "default": ""
  },
  "resourceProtocol": {
    "type": "string",
    "title": "资源协议",
    "required": true
  },
  "requestType": {
    "type": "string",
    "title": "请求类型",
    "required": false,
    "default": "POST",
    "oneOf": [
      {
        "title": "POST",
        "const": "POST"
      },
      {
        "title": "GET",
        "const": "GET"
      }
    ]
  },
  "pattern": {
    "type": "string",
    "title": "同步类型",
    "required": true,
    "oneOf": [
      {
        "title": "同步",
        "const": "task_sync"
      },
      {
        "title": "异步",
        "const": "task_async"
      }
    ]
  },
  "inputType": {
    "type": "string",
    "title": "输入类型",
    "oneOf": [
      {
        "title": "阻塞式",
        "const": "block"
      },
      {
        "title": "流式",
        "const": "stream"
      }
    ]
  },
  "outputType": {
    "type": "string",
    "title": "输出类型",
    "oneOf": [
      {
        "title": "阻塞式",
        "const": "block"
      },
      {
        "title": "流式",
        "const": "stream"
      }
    ]
  },
  "inputMappings": {
    "type": "array",
    "title": "输入映射",
    "required": true,
    "items": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "title": "输入来源",
          "required": true
        },
        "target": {
          "type": "string",
          "title": "输入目标",
          "required": true
        },
        "reference": {
          "type": "string",
          "title": "commonMapping 引用",
          "required": true
        },
        "transform": {
          "type": "string",
          "title": "输入映射处理 aviator 表达式",
          "required": false
        },
        "tolerance": {
          "type": "boolean",
          "title": "容忍错误",
          "required": false
        },
        "requiredGroup": [
          ["source", "target"],
          ["reference"]
        ]
      }
    }
  },
  "outputMappings": {
    "type": "array",
    "title": "输出映射",
    "required": true,
    "items": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "title": "输出来源",
          "required": true
        },
        "target": {
          "type": "string",
          "title": "输出目标",
          "required": true
        },
        "reference": {
          "type": "string",
          "title": "commonMapping 引用",
          "required": true
        },
        "transform": {
          "type": "string",
          "title": "输出映射处理 aviator 表达式",
          "required": false
        },
        "tolerance": {
          "type": "boolean",
          "title": "容忍错误",
          "required": false
        },
        "requiredGroup": [
          ["source", "target"],
          ["reference"]
        ]
      }
    }
  },
  "tolerance": {
    "type": "boolean",
    "title": "是否容错",
    "required": false,
    "default": false
  },
  "successConditions": {
    "type": "array",
    "title": "成功条件",
    "required": false,
    "items": {
      "type": "string"
    }
  },
  "failConditions": {
    "type": "array",
    "title": "失败条件",
    "required": false,
    "items": {
      "type": "string"
    }
  },
  "retry": {
    "type": "object",
    "title": "重试配置",
    "required": false,
    "properties": {
      "maxRetryTimes": {
        "type": "integer",
        "title": "最大重试次数",
        "required": true
      },
      "intervalInSeconds": {
        "type": "integer",
        "title": "间隔时间",
        "required": false
      },
      "multiplier": {
        "type": "integer",
        "title": "放大系数",
        "required": false
      }
    }
  },
  "next": {
    "type": "string",
    "title": "下一节点",
    "required": false
  }
}
