<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="abortExecuteHandler" class="java.util.concurrent.ThreadPoolExecutor$AbortPolicy"/>

    <bean id="sseThreadPoolExecutor" class="java.util.concurrent.ThreadPoolExecutor">
        <constructor-arg index="0" value="20"/>
        <constructor-arg index="1" value="100"/>
        <constructor-arg index="2" value="5"/>
        <constructor-arg index="3" value="#{T(java.util.concurrent.TimeUnit).SECONDS}"/>
        <constructor-arg index="4" ref="sseThreadPoolQueue"/>
        <property name="rejectedExecutionHandler" ref="abortExecuteHandler"/>
    </bean>
    <bean id="sseThreadPoolQueue" class="java.util.concurrent.LinkedBlockingQueue">
        <constructor-arg index="0" value="50"/>
    </bean>
</beans>